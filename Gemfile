  gem 'ruby-debug19', :platforms => :ruby_19
end

group :test do
  gem 'rspec-rails'
  gem 'rr', :git => 'https://github.com/btakita/rr.git'
  gem 'remarkable_activerecord', '~> 4.0.0.alpha4'
