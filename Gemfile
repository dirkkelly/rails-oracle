  gem 'sass-rails',   '~> 3.1.0'
  gem 'coffee-rails', '~> 3.1.0'
  gem 'compass'
  gem 'haml'
  gem 'uglifier'
end

gem 'jquery-rails'

# Database
gem 'ruby-oci8'
